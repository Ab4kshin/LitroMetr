<Page x:Class="LitroMetr.SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SecondPage"
      Background="White">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="23"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для Slider -->
        <Style x:Key="CustomSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="#BDC3C7" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="#3498DB" Width="20" Height="20"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Label Content="ЛитроМетр" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="50" Height="82" Width="278"/>
        <Button Content="Индивидуальное питьё" HorizontalAlignment="Left" Margin="204,126,0,0" VerticalAlignment="Top" Height="58" Width="274" Click="Individual_Click"/>
        <Button Content="Групповое питьё" HorizontalAlignment="Left" Margin="758,126,0,0" VerticalAlignment="Top" Height="58" Width="274" Click="Group_Click"/>
        <Label Content="Количество мужчин" HorizontalAlignment="Left" Margin="291,212,0,0" VerticalAlignment="Top" Height="39" Width="196" FontSize="20"/>
        <Label Content="Количество женщин" HorizontalAlignment="Left" Margin="760,212,0,0" VerticalAlignment="Top" Height="39" Width="201" FontSize="20"/>
        <Label Content="Количество человек" HorizontalAlignment="Left" Height="36" Margin="530,214,0,0" VerticalAlignment="Top" Width="201" FontSize="20"/>

        <!-- Слайдер для мужчин -->
        <Slider x:Name="MenSlider" Style="{StaticResource CustomSliderStyle}"
                HorizontalAlignment="Left" Margin="307,256,0,0" VerticalAlignment="Top" Width="164"
                ValueChanged="MenSlider_ValueChanged" Minimum="0" Maximum="30"/>

        <!-- Слайдер для женщин -->
        <Slider x:Name="WomenSlider" Style="{StaticResource CustomSliderStyle}"
                HorizontalAlignment="Left" Margin="780,256,0,0" VerticalAlignment="Top" Width="164"
                ValueChanged="WomenSlider_ValueChanged" Minimum="0" Maximum="30"/>

        <!-- Поля для отображения количества мужчин -->
        <TextBox Text="{Binding MenCount, StringFormat={}{0:F0} чел}" IsReadOnly="True"
                 HorizontalAlignment="Left" Margin="323,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="132" Height="34" FontSize="20"/>

        <!-- Поля для отображения количества женщин -->
        <TextBox Text="{Binding WomenCount, StringFormat={}{0:F0} чел}" IsReadOnly="True"
                 HorizontalAlignment="Left" Margin="796,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="132" Height="34" FontSize="20"/>

        <!-- Поле для отображения общего количества человек -->
        <TextBox Text="{Binding TotalCount, Mode=OneWay, StringFormat={}{0:F0} чел}" IsReadOnly="True"
                 HorizontalAlignment="Left" Margin="576,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="108" Height="42" FontSize="20"/>

        <!-- Общее количество воды -->
        <TextBlock Text="{Binding TotalWaterAmountText}"
           HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top"
           FontSize="30" FontWeight="Bold" Height="50" Width="300" TextAlignment="Center"/>


    </Grid>
</Page>
