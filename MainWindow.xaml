<Window x:Class="LitroMetr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitroMetr"
        xmlns:sys="clr-namespace:System;assembly=System"
        mc:Ignorable="d"
        Title="ЛитроМетр" Height="720" Width="1280">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="23"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Slider -->
        <Style x:Key="CustomSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="#BDC3C7" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="#3498DB" Width="20" Height="20"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Градиент для имитации воды -->
        <LinearGradientBrush x:Key="WaterBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#AA3498DB" Offset="0"/>
            <GradientStop Color="#882980B9" Offset="1"/>
        </LinearGradientBrush>

        <!-- Градиент для имитации бутылки -->
        <LinearGradientBrush x:Key="BottleBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#AAFFFFFF" Offset="0"/>
            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
            <GradientStop Color="#66FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <!-- Основной Grid для всех элементов -->
    <Grid>
        <!-- Заголовок приложения -->
        <Label Content="ЛитроМетр" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,30,0,0" 
               FontSize="50"/>

        <!-- Кнопки выбора режима - фиксированное положение -->
        <Button x:Name="IndividualButton"
                Content="Индивидуальное питьё" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="204,126,0,0"
                Height="58" 
                Width="274" 
                Click="IndividualButton_Click"/>

        <Button x:Name="GroupButton"
                Content="Групповое питьё" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="758,126,0,0"
                Height="58" 
                Width="274" 
                Click="GroupButton_Click"/>

        <!-- Контент для индивидуального режима -->
        <Grid x:Name="IndividualContent" Visibility="Visible">
            <!-- Панель выбора пола и веса -->
            <Grid Margin="0,200,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Панель выбора пола -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Пол" 
                           FontSize="30" 
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button Content="Мужчина" 
                                Width="150" 
                                Height="40" 
                                Click="MaleButton_Click"/>
                        <Button Content="Женщина" 
                                Margin="20,0,0,0"
                                Width="150" 
                                Height="40" 
                                Click="FemaleButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Панель выбора веса -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Вес" 
                           FontSize="30" 
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                    <Slider x:Name="mySlider"
                            Grid.Row="1"
                            Style="{StaticResource CustomSliderStyle}"
                            Minimum="40"
                            Maximum="120"
                            Value="70"
                            Width="300"
                            HorizontalAlignment="Center"
                            ValueChanged="mySlider_ValueChanged"/>

                    <TextBlock Text="{Binding ElementName=mySlider, Path=Value, StringFormat={}{0:F0} кг}" 
                               Grid.Row="2"
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!-- Отображение количества воды -->
            <Label x:Name="WaterAmountLabel" 
                   Content="0 л"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"
                   Margin="0,-90,0,0"/>

            <!-- Визуализация бутылки с водой -->
            <Grid HorizontalAlignment="Center" 
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,50">
                <Grid Width="150" Height="300">
                    <Grid x:Name="WaterContainer" 
                          VerticalAlignment="Bottom" 
                          Height="300" 
                          ClipToBounds="True">
                        <Rectangle x:Name="WaterRectangle" 
                                   Fill="{StaticResource WaterBrush}"
                                   VerticalAlignment="Bottom"
                                   Height="300"/>
                    </Grid>

                    <Border x:Name="BottleBorder"
                            Background="{StaticResource BottleBrush}"
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1"
                            CornerRadius="20,20,40,40"
                            VerticalAlignment="Bottom"
                            Height="300"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Контент для группового режима -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden" 
               Visibility="Collapsed"/>
    </Grid>
</Window>