<Window x:Class="LitroMetr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitroMetr"
        mc:Ignorable="d"
        Title="ЛитроМетр" Height="720" Width="1280">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="23"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Slider -->
        <Style x:Key="CustomSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="#BDC3C7" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="#3498DB" Width="20" Height="20"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Основной Grid для всех элементов -->
    <Grid>
        <!-- Заголовок приложения -->
        <Label Content="ЛитроМетр" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,30,0,0" 
               FontSize="50"/>

        <!-- Кнопки выбора режима -->
        <Button x:Name="IndividualButton"
                Content="Индивидуальное питьё" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="204,126,0,0"
                Height="58" 
                Width="274" 
                Click="IndividualButton_Click"/>

        <Button x:Name="GroupButton"
                Content="Групповое питьё" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="758,126,0,0"
                Height="58" 
                Width="274" 
                Click="GroupButton_Click"/>

        <!-- Контент для индивидуального режима -->
        <Grid x:Name="IndividualContent" Visibility="Visible">
            <!-- Панель выбора пола и веса -->
            <Grid Margin="0,200,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Панель выбора пола -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Пол" 
                           FontSize="30" 
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button Content="Мужчина" 
                                Width="150" 
                                Height="40" 
                                Click="MaleButton_Click"/>
                        <Button Content="Женщина" 
                                Margin="20,0,0,0"
                                Width="150" 
                                Height="40" 
                                Click="FemaleButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Панель выбора веса -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Вес" 
                           FontSize="30" 
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                    <Slider x:Name="mySlider"
                            Grid.Row="1"
                            Style="{StaticResource CustomSliderStyle}"
                            Minimum="40"
                            Maximum="120"
                            Value="70"
                            Width="300"
                            HorizontalAlignment="Center"
                            ValueChanged="mySlider_ValueChanged"/>

                    <TextBlock Text="{Binding ElementName=mySlider, Path=Value, StringFormat={}{0:F0} кг}" 
                               Grid.Row="2"
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!-- Контейнер для бутылки и текста -->
            <Grid HorizontalAlignment="Center" 
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,30"
                  Height="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Визуализация бутылки с водой -->
                <Grid Grid.Column="0"
                      Width="200" 
                      Height="400"
                      Margin="0,0,40,0">

                    <!-- Контейнер для воды с обрезкой -->
                    <Grid x:Name="WaterContainer" 
                          VerticalAlignment="Bottom" 
                          Height="0"
                          Width="120"
                          ClipToBounds="True"
                          HorizontalAlignment="Center">

                        <!-- Изображение воды -->
                        <Image x:Name="WaterImage"
                               Source="Images/water.jpg"
                               VerticalAlignment="Bottom"
                               Height="400"
                               Width="105"
                               Stretch="Fill"/>
                    </Grid>

                    <!-- Изображение бутылки (поверх воды) -->
                    <Image x:Name="BottleImage"
                           Source="Images/bottle.png"
                           VerticalAlignment="Bottom"
                           Height="400"
                           Width="200"
                           Stretch="Uniform"/>
                </Grid>

                <!-- Отображение количества воды (справа от бутылки) -->
                <Label x:Name="WaterAmountLabel" 
                       Grid.Column="1"
                       Content="0 л"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="40"
                       FontWeight="Bold"
                       Margin="0,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Контент для группового режима -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden" 
               Visibility="Collapsed"/>
    </Grid>
</Window>